<!-- /templates/customers/reset_password.liquid -->

<div class="reset__container container">
    <h2 class="reset__head">{{ 'customer.reset_password.title' | t }}</h2>
    <p>{{ 'customer.reset_password.subtext' | t }}</p>
    <div class="reset__holder">
    {% form 'reset_customer_password', class: 'reset__form' %}
        {% if form.posted_successfully? %}
            <span class="reset__msg--valid">{{ 'customer.recover_password.success' | t }}</span>
        {% else %}
            <div class="row">
                <label class="label">{{ 'customer.reset_password.password' | t }}</label>
                <input class="field {% if form.errors contains 'password' or 'error' %} field--error{% endif %}" type="password" name="customer[password]" placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>
            <div class="row">
                <label class="label">{{ 'customer.reset_password.password_confirm' | t }}</label>
                <input class="field {% if form.errors contains 'password' or 'error' %} field--error{% endif %}" type="password" name="customer[password_confirmation]" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>
            <div class="row row--error">
                {{ form.errors | default_errors }}
            </div>
            <div class="row row--submit">
                <input class="btn btn--full" type="submit" value="{{ 'customer.reset_password.submit' | t }}">
            </div>
        {% endif %}
    {% endform %}
    </div>
</div>
