<!-- /templates/customers/reset_password.liquid -->

<div class="reset-pwd container align-c">
    <h2 class="reset-pwd__head head">{{ 'customer.reset_password.title' | t }}</h2>
    <p>{{ 'customer.reset_password.subtext' | t }}</p>

    <div class="reset-pwd__holder align-l">
    {% form 'reset_customer_password', class: 'reset__form' %}

        {% if form.posted_successfully? %}
            <span class="reset-pwd__msg--valid">{{ 'customer.recover_password.success' | t }}</span>
        {% else %}
            <div class="row">
                <label class="label">{{ 'customer.reset_password.password' | t }}</label>
                <input class="field" type="password" name="customer[password]" placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>
            <div class="row">
                <label class="label">{{ 'customer.reset_password.password_confirm' | t }}</label>
                <input class="field" type="password" name="customer[password_confirmation]" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>
            {% if form.errors %}
            <div class="row row--error">
                {{ form.errors | default_errors }}
            </div>
            {% endif %}
            <div class="row row--end">
                <input class="btn btn--full" type="submit" value="{{ 'customer.reset_password.submit' | t }}">
            </div>
        {% endif %}
        
    {% endform %}
    </div>
</div>
