<!-- /snippets/partials/drawer.liquid -->

<aside class="main-drawer">
    {% include 'search-bar' %}
    <nav class="mobile-nav">
        <ul class="mobile-nav__list">
            {% for link in linklists.main-menu.links %}
                {% assign child_list_handle = link.title | handleize %}
                {% if linklists[child_list_handle].links != blank %}
                    <li class="mobile-nav__item mobile-nav__item--has-sub {% if link.active %}mobile-nav__item--active{% endif %}">
                        <a class="mobile-nav__link" href="{{ link.url }}">{{ link.title }} </a>
                        <ul class="mobile-nav-sub__list">
                            {% for childlink in linklists[child_list_handle].links %}
                                <li class="mobile-nav-sub__item {% if childlink.active %}mobile-nav-sub__item--active{% endif %}">
                                    <a class="mobile-nav-sub__link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li class="mobile-nav__item {% if link.active %}mobile-nav__item--active{% endif %}">
                        <a class="mobile-nav__link" href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            {% if shop.customer_accounts_enabled %}
                {% if customer %}
                    <li class="mobile-nav__item {% if link.active %}mobile-nav__item--active{% endif %}">
                        <a class="mobile-nav__link" href="/account">Your {{ 'layout.customer.account' | t }}</a>
                    </li>
                    <li class="mobile-nav__item {% if link.active %}mobile-nav__item--active{% endif %}">
                        <a class="user-nav__link" href="/account/logout">{{ 'layout.customer.log_out' | t }}</a>
                    </li>
                {% else %}
                    <li class="mobile-nav__item {% if link.active %}mobile-nav__item--active{% endif %}">
                        <a class="mobile-nav__link" href="/account/login">{{ 'layout.customer.log_in' | t }}</a>
                    </li>
                {% endif %}
            {% endif %}
        </ul>
    </nav>
</aside>