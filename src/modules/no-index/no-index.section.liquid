{%- for block in section.blocks -%}
  {%- assign no_index = block.settings -%}

  {%- if no_index['url'] == blank or canonical_url contains no_index['url'] -%}
    <meta name="robots" content="noindex" />
  {%- endif -%}
{%- endfor -%}

{% schema %}
  {
    "name": "No Index Pages",
    "blocks": [ {
      "type": "no_index",
      "name": "No Index",
      "settings": [ {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "url",
        "id": "url",
        "label": "Page",
        "info": "Leave empty if all pages should not be indexed."
      } ]
    } ]
  }
{% endschema %}
