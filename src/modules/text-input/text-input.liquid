{%- assign name = name | default: false -%}
{%- assign label = label | default: false -%}
{%- assign type = type | default: 'text' -%}
{%- assign value = value | default: '' -%}
{%- assign autocorrect = autocorrect | default: false -%}
{%- assign autocapitalize = autocapitalize | default: false -%}
{%- assign placeholder = placeholder | default: '' -%}
{%- assign class = class | default: '' -%}
{%- assign error = error | default: '' -%}
{%- assign style = style | default: 'default' -%}
{%- assign required = required | default: false -%}
{%- assign initial_value_getter = initial_value_getter | default: false -%}
{%- assign validate_method = validate_method | default: false -%}
{%- assign @change = @change | default: false -%}

<input
  is="text-input"
  {% if @change %}@change="{{@change}}"{% endif %}
  {% if label %}label="{{label}}"{% endif %}
  class="text-input text-input--{{style}} {{class}}"
  modifier="{{style}}"
  type="{{type}}"
  name="{{name}}"
  placeholder="{{placeholder}}"
  autocorrect="{{autocorrect}}"
  autocapitalize="{{autocapitalize}}"
  {% if required %}required="true"{% endif %}
  {% if validate_method %}:validate-method="{{validate_method}}"{% endif %}
  {% if initial_value_getter %}:initial-value-getter="{{initial_value_getter}}"{% endif %}
  error="{{error}}" />

{%- assign label = nil -%}
{%- assign name = nil -%}
{%- assign type = nil -%}
{%- assign value = nil -%}
{%- assign autocorrect = nil -%}
{%- assign autocapitalize = nil -%}
{%- assign placeholder = nil -%}
{%- assign class = nil -%}
{%- assign error = nil -%}
{%- assign style = nil -%}
{%- assign required = nil -%}
{%- assign initial_value_getter = nil -%}
{%- assign validate_method = nil -%}
{%- assign @change = nil -%}
