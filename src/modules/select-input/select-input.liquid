{%- assign name = name | default: false -%}
{%- assign value = value | default: false -%}
{%- assign label = label | default: false -%}
{%- assign class = class | default: false -%}
{%- assign error = error | default: false -%}
{%- assign v_name = v_name | default: false -%}
{%- assign v_label = v_label | default: false -%}
{%- assign v_value = v_value | default: false -%}
{%- assign v_validate = v_validate | default: false -%}
{%- assign v_options = v_options | default: false -%}
{%- assign @change = @change | default: false -%}
{%- assign required = required | default: false -%}
{%- assign options_as_slot = false -%}
{%- if options contains '<option' -%}{%- assign options_as_slot = true -%}{%- endif -%}
<select
  is="select-input"
  class="select-input {{class}}"
  {%- if name -%}name="{{name}}"{%- endif -%}
  {%- if label -%}label="{{label}}"{%- endif -%}
  {%- if value -%}value="{:value}}"{%-endif -%}
  {%- if v_name -%}:name="{{v_name}}"{%- endif -%}
  {%- if v_label -%}:label="{{v_label}}"{%- endif -%}
  {%- if v_value -%}:get-value="{{v_value}}"{%- endif -%}
  {%- if v_validate -%}:validate="{{v_validate}}"{%- endif -%}
  {%- if v_options and options_as_slot != true -%}:options="{{v_options}}"{%- endif -%}
  {%- if @change -%}@change="{{@change}}"{%- endif -%}
  {%- if required -%}required="true"{%- endif -%}
  error="{{error}}">{%- if options and options_as_slot == true -%}{{- options -}}{%- endif -%}</select>
{%- assign name = nil -%}
{%- assign label = nil -%}
{%- assign value = nil -%}
{%- assign class = nil -%}
{%- assign error = nil -%}
{%- assign v_name = nil -%}
{%- assign v_label = nil -%}
{%- assign v_value = nil -%}
{%- assign v_validate = nil -%}
{%- assign v_options = nil -%}
{%- assign @change = nil -%}
{%- assign required = nil -%}
{%- assign options_as_slot = nil -%}
