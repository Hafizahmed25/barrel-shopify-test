{% if cart.items.size > 0 %}
  {% assign items = cart.items %}
{% endif %}

<div class="mini-cart" id="mini-cart" data-module="mini-cart">
  <div class="mini-cart__title">
    <h3>{{ 'cart.general.title' | t }}</h3>
  </div>

  <div class="mini-cart__wrapper js-wrapper" data-table>
    <i class="mini-cart__loader"></i>
    <div class="mini-cart__table js-table {% unless items %}hide{% endunless %}">
    </div>
  </div>

  {% unless items %}
    <div class="mini-cart__none">
      <p>{{ 'cart.general.empty' | t }}</p>
    </div>
  {% endunless %}
</div>

{% assign items = false %}
